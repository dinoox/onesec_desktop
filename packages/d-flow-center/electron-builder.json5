// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.ripplestar.miaoyan",
  "asar": true,
  "productName": "秒言",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "extraResources": [
    {
      "from": "assets/MiaoyanSwift.app",
      "to": "Helpers/MiaoyanSwift.app"
    }
  ],
  "mac": {
    "icon": "assets/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": "arm64"
      },
      {
        "target": "dmg",
        "arch": "x64"
      }
    ],
    "artifactName": "${productName}-Mac-${arch}-${version}-Installer.${ext}",
    "identity": "Hangzhou RippleStar Technology Co., Ltd. (PNG2RBG62Z)",
    "type": "distribution",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "notarize": {
      "teamId": "PNG2RBG62Z"
    },
    "extendInfo": {
      "NSMicrophoneUsageDescription": "此应用需要访问麦克风以进行语音识别和音频录制功能",
      "NSCameraUsageDescription": "此应用需要访问摄像头以进行视频录制功能",
      "NSAppleEventsUsageDescription": "此应用需要控制其他应用程序以提供自动化功能",
      "NSAccessibilityUsageDescription": "此应用需要辅助功能权限以监听键盘事件和提供无障碍服务"
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "artifactName": "${productName}-Linux-${version}.${ext}"
  }
}
